//temp fix
$grid-breakpoints := {
  xs: 0
  sm: 600px
  md: 1024px
  lg: (1440px - 16px) // Desktop gets a 16dp reduction
  xl: (1920px - 16px) // https://material.io/guidelines/layout/responsive-ui.html#responsive-ui-breakpoints
}
//temp fix
$display-breakpoints := {
  xs-only: "only screen and (max-width: %s)" % ($grid-breakpoints.sm - 1)
  sm-only: "only screen and (min-width: %s) and (max-width: %s)" % ($grid-breakpoints.sm ($grid-breakpoints.md  - 1))
  sm-and-down: "only screen and (max-width: %s)" % ($grid-breakpoints.md - 1)
  sm-and-up: "only screen and (min-width: %s)" % $grid-breakpoints.sm
  md-only: "only screen and (min-width: %s) and (max-width: %s)" % ($grid-breakpoints.md ($grid-breakpoints.lg  - 1))
  md-and-down: "only screen and (max-width: %s )" % ($grid-breakpoints.lg - 1)
  md-and-up: "only screen and (min-width: %s)" % $grid-breakpoints.md
  lg-only: "only screen and (min-width: %s) and (max-width: %s)" % ($grid-breakpoints.lg ($grid-breakpoints.xl - 1))
  lg-and-down: "only screen and (max-width: (%s - 1))" % $grid-breakpoints.xl
  lg-and-up: "only screen and (min-width: %s)" % $grid-breakpoints.lg
  xl-only: "only screen and (min-width: %s)" % $grid-breakpoints.xl
}

  #home-view
    background white

    .toolbar
      opacity 1
      transition opacity .25s ease-in-out
      &.hidden
        opacity 0
        pointer-events: none
      .btn
        text-transform none
        font-size 18px
        font-weight 400
        color #777777

    #hero
      margin 0
      padding-top: 4em
      position: relative
      z-index: 1

      h1
        font-size 48px
        color #1697F6
        font-weight 400
        margin-top .4em
      h2
        font-size 24px
        line-height 1.1em
        color #767676
        font-weight 300
      img.logo
        height 125px

      @media $display-breakpoints.sm-only
        h1
          font-size 55px
          margin-top .33em
          margin-bottom .3em
        h2
          font-size 36px
          margin-bottom 1.5em
        img.logo
          height 125px

      @media $display-breakpoints.md-only
        padding-top: 4em

        h1
          font-size 50px
          margin-top 0
          margin-top 1.2em
          margin-bottom .2em
        h2
          margin-bottom 1em
          font-size 32px
        img.logo
          height 250px

      @media $display-breakpoints.lg-only
        padding-top 4em
        h1
          font-size 50px
          margin-bottom .2em
          margin-top 2em
        h2
          font-size 44px
          margin-bottom 1em
        img.logo
          height 350px

      @media $display-breakpoints.xl-only
        padding-top 5em
        h1
          font-size 60px
          margin-top 0
          margin-top 2em
          margin-bottom .2em
        h2
          margin-bottom .8em
          font-size 55px
        img.logo
          height 450px

    #section-body
      background url('/static/doc-images/slant-repeat.svg') 50% 0
      background-size 100%
      @media $display-breakpoints.xs-only
        background-size 200%
      section
        position relative
        .card
          z-index 1
        h2
          font-size 28px
          font-weight 300
          color #767676

        &#features
          position relative
          padding-top 60px
          &:before
            content ''
            position absolute
            left 0
            right 0
            top 0
            height 100vh
            background url('/static/doc-images/slant-header.svg') no-repeat top center
            background-size 100%
            @media $display-breakpoints.xs-only
              background-size 100%

          img
            width 80%

          h3
            font-size 20px
            font-weight 500
            line-height 1.1em
            color #666666
          p
            font-size 16px
            line-height 26px
            letter-spacing .01em
            color #767676

        &#sponsors
          img.sponsor
            max-width 80%
            max-height: 65px
            margin-bottom 3em

        &#support
          a
            text-decoration none
            font-size: 24px
          @media $display-breakpoints.sm-and-down
            a
              font-size: 21px
          img
            max-width 80%


      #footer-hero

        @media $display-breakpoints.md-and-up
          padding: 2em 0;

        &:before
          content ''
          position absolute
          left 0
          right 0
          bottom 0
          height 100vw
          background url('/static/doc-images/slant-footer.svg') no-repeat  50% 100%
          background-size 100%
          @media $display-breakpoints.xs-only
            background-size 475%
            height 300vw
          @media $display-breakpoints.sm-only
            background-size 225%
            height 300vw
          @media $display-breakpoints.md-only
            background-size 140%
            height 300vw


        img
          position relative
        h2
          position: relative
          font-size 32px
          color white
          font-weight 300
          @media $display-breakpoints.lg-and-up
              font-size 40px

      @media $display-breakpoints.sm-and-down
        section
          h2
            font-size 24px
    footer
      a
        text-decoration none
        color #cfd8dc
        &:hover
          color white
          cursor pointer
      background #37424b
      color white
      .flex
        padding 2.5em 3em
        &.vuetify
          background #303c42
          h5
            font-size 21px
          img
            height 32px
            margin-right 10px
            vertical-align middle
          span
            position relative
            top 3px
        h5
          color white
          font-size 16px
        ul
          list-style none
          margin 0
          padding 0
          li
            a
              font-size 16px
              display block
              padding: 0 0 .66em
              .icon.fa
                font-size 18px
                width 25px
      .legal-footer
        background #2c363a
        padding 1em 0
        font-size 14px
